{
  "name": "glua-api-scraper",
  "description": "Scrapes the Garry's Mod Wiki in order to build EmmyLua comments that will provide intellisense help.",
  "keywords": [
    "Garry's Mod",
    "api",
    "EmmyLua"
  ],
  "homepage": "https://github.com/luttje/glua-api-snippets",
  "repository": {
    "type": "git",
    "url": "https://github.com/luttje/glua-api-snippets"
  },
  "author": "Luttje",
  "license": "MIT",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "clear-output": "rm -rf ./output/",
    "cli:wiki-check-changed": "npx ts-node-esm ./src/cli-change-checker.ts",
    "cli:scrape-wiki": "npm run clear-output && npx ts-node-esm ./src/cli-scraper.ts -- --output ./output/",
    "cli:pack-release": "npx ts-node-esm ./src/cli-release-packer.ts -- --input ./output/ --output ./dist/release/",
    "cli:publish-library": "npx ts-node-esm ./src/cli-library-publisher.ts -- --input ./dist/release/ --output ./dist/libraries/garrysmod",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules VERBOSE_LOGGING=1 npx jest",
    "ci:test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --ci --coverage"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "archiver": "^5.3.1",
    "cheerio": "^1.0.0-rc.12",
    "cross-env": "^7.0.3",
    "fetch-retry": "^5.0.4",
    "html-loader": "^4.2.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "node-stream-zip": "^1.15.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^29.1.0",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "gitHead": "2513190cc1de00d1049e35f9c942b779447530f9"
}
